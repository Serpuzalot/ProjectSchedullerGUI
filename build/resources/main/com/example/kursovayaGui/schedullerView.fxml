<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefWidth="1000" prefHeight="600" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kursovayaGui.Controller" >
    <columnConstraints>
        <ColumnConstraints prefWidth="200" maxWidth="200" />
        <ColumnConstraints prefWidth="400" maxWidth="400" />
        <ColumnConstraints prefWidth="400" maxWidth="400" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="100" maxHeight="120" />
        <RowConstraints prefHeight="100" maxHeight="120" />
        <RowConstraints prefHeight="100" maxHeight="140" />
        <RowConstraints prefHeight="100" maxHeight="140" />
        <RowConstraints prefHeight="50" maxHeight="80" />
    </rowConstraints>

    <Button fx:id="queueBtn" prefWidth="180" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#handleQueueBtnAction" >
        Очередь на процессор
        <GridPane.margin> <Insets left="5"></Insets></GridPane.margin></Button>
    <Button fx:id="rejectQueueBtn" prefWidth="180" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#handleRejectQueueBtnAction" >
        Очередь отказов
        <GridPane.margin><Insets left="5"></Insets></GridPane.margin></Button>
    <Button fx:id="finishedQueueBtn" prefWidth="180" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#handlefinishedQueueBtnAction" >
        Законченные процессы
        <GridPane.margin><Insets left="5"></Insets></GridPane.margin></Button>
    <Button fx:id="memoryBlocksBtn" prefWidth="180" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#handleMemoryBlocksBtnAction" >
        Блоки памяти
        <GridPane.margin><Insets left="5"></Insets></GridPane.margin></Button>
    <Button fx:id="startBtn" prefWidth="50" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="LEFT" onAction="#handleStartBtnAction">
        Старт
        <GridPane.margin><Insets left="5"></Insets></GridPane.margin></Button>
    <Button fx:id="stopBtn" prefWidth="50" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="CENTER" onAction="#handleStopBtnAction" >
        Стоп</Button>
    <Button fx:id="pauseBtn" prefWidth="50" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="RIGHT" onAction="#handlePauseBtnAction" >
        Пауза
        <GridPane.margin><Insets right="5"></Insets></GridPane.margin></Button>

    <GridPane GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="1" GridPane.columnSpan="2" >
        <rowConstraints>
            <RowConstraints maxHeight="25" />
            <RowConstraints maxHeight="25" />
            <RowConstraints maxHeight="190" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints prefWidth="200" />
            <ColumnConstraints prefWidth="200" />
            <ColumnConstraints prefWidth="200" />
            <ColumnConstraints prefWidth="200" />
        </columnConstraints>
        <Label GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="0" >CPU:</Label>
        <Label GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" >ИД</Label>
        <Label GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="CENTER" >Свободен</Label>
        <Label GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.halignment="CENTER" >Ид процесса</Label>
        <Label GridPane.rowIndex="1" GridPane.columnIndex="3" GridPane.halignment="CENTER" >Время работы</Label>
        <ScrollPane GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="4">
            <GridPane fx:id="cpuField" prefWidth="900" prefHeight="190" >
                <rowConstraints>
                    <RowConstraints maxHeight="25"/>
                </rowConstraints>
                <columnConstraints>
                    <ColumnConstraints prefWidth="200" />
                    <ColumnConstraints prefWidth="200" />
                    <ColumnConstraints prefWidth="200" />
                    <ColumnConstraints prefWidth="200" />
                </columnConstraints>
                <Label GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="4" visible="false"></Label>
            </GridPane>
        </ScrollPane >
    </GridPane>

    <GridPane GridPane.rowIndex="2" GridPane.rowSpan="3" GridPane.columnIndex="1" GridPane.columnSpan="2"  >
        <rowConstraints>
            <RowConstraints maxHeight="25" />
            <RowConstraints maxHeight="25" />
            <RowConstraints maxHeight="310" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints prefWidth="114" />
            <ColumnConstraints prefWidth="114" />
            <ColumnConstraints prefWidth="114" />
            <ColumnConstraints prefWidth="114" />
            <ColumnConstraints prefWidth="114" />
            <ColumnConstraints prefWidth="114" />
            <ColumnConstraints prefWidth="114" />
        </columnConstraints>
        <Label fx:id="fieldTitle" GridPane.columnIndex="0" GridPane.columnSpan="7"  GridPane.rowIndex="0" GridPane.halignment="CENTER" >
            <GridPane.margin><Insets top="10"></Insets></GridPane.margin>
        </Label>
        <Label fx:id="subtitleID" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER">ИД</Label>
        <Label fx:id="subtitleName" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="CENTER">Имя</Label>
        <Label fx:id="subtitlePriority" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.halignment="CENTER">Приоритет</Label>
        <Label fx:id="subtitleMemory" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.halignment="CENTER">Память</Label>
        <Label fx:id="subtitleTimeIn" GridPane.columnIndex="4" GridPane.rowIndex="1" GridPane.halignment="CENTER">Время прибытия</Label>
        <Label fx:id="subtitleBurstTime" GridPane.columnIndex="5" GridPane.rowIndex="1" GridPane.halignment="CENTER">Время работы</Label>
        <Label fx:id="subtitleState" GridPane.columnIndex="6" GridPane.rowIndex="1" GridPane.halignment="CENTER">Статус</Label>

        <ScrollPane GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="7" prefHeight="310" prefWidth="900">
            <GridPane fx:id="contentField" >
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
                <columnConstraints>
                    <ColumnConstraints prefWidth="114" />
                    <ColumnConstraints prefWidth="114" />
                    <ColumnConstraints prefWidth="114" />
                    <ColumnConstraints prefWidth="114" />
                    <ColumnConstraints prefWidth="114" />
                    <ColumnConstraints prefWidth="114" />
                    <ColumnConstraints prefWidth="114" />
                </columnConstraints>
            </GridPane>
        </ScrollPane>
    </GridPane>

</GridPane>
